<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CS Student Hub</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon_white.ico" />
    <!-- Font Awesome icons-->
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
    <!-- Google fonts-->
    <link
      href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"
      rel="stylesheet"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/homepage.css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/styles.css" rel="stylesheet" />
    <!-- Colorblind Script -->
    <script defer src="js/colorblind.js"></script>
    <!-- Night Mode Script -->
    <script defer src="js/night-mode.js"></script>
     <!-- Go To Top Button Script -->
     <script defer src="js/goToTopButton.js"></script>
  </head>
  <body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
      <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="/">
          <div class="nav-logo-div">
            <img src="/assets/img/logo1_white.png" class="nav-logo" />
          </div>
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarResponsive"
          aria-controls="navbarResponsive"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          Menu
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <!-- Change ms-auto to me-auto -->
            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/resources"
                >Resources</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/tools">Tools</a>
            </li>
            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/community"
                >Community</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/careers"
                >Careers</a
              >
            </li>
          </ul>
          <form action="/search" method="POST" class="d-flex me-lg-4">
            <input
              type="text"
              name="searchQuery"
              class="form-control searchbar"
              placeholder="Search for articles"
            />
            <button type="submit" class="btn search">
              <i class="fa-solid fa-magnifying-glass fa-lg"></i>
            </button>
          </form>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <!-- Change User Profile Icon, dependant if user is logged in or not -->
              <% if (userLoggedIn === false) { %>
              <li class="nav-item">
                <a
                  class="nav-link user-profile px-lg-3 py-3 py-lg-4"
                  href="/login"
                >
                  <i class="fa-solid fa-user-plus fa-2xl"></i>
                </a>
              </li>
              <% } %>

              <!-- Only display Logout icon if user is not logged in -->
              <% if (userLoggedIn) { %>
              <li class="nav-item">
                <button id="logoutButton" class="btn logout">
                  <i
                    class="fa-solid fa-right-from-bracket fa-2xl text-light"
                  ></i>
                </button>
              </li>
              <% } %>
              <li>
                <button id="colorblindToggle" class="btn mode-toggle">
                  <i class="fa-brands fa-accessible-icon fa-2xl text-light"></i>
                </button>
              </li>
              <li>
                <button id="nightModeToggle" class="btn mode-toggle">
                  <i class="fas fa-sun fa-2xl text-light"></i>
                </button>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <!-- Slider section -->
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% for (let i = 1; i <= nbOfSlides; i++) { %>
        <div class="carousel-item <%= i === 1 ? 'active' : '' %>">
          <img
            src="/assets/img/image<%= i %>.jpg"
            class="d-block w-100"
            alt="Slide <%= i %>"
          />
          <div class="carousel-caption d-none d-md-block">
            <h2>
              <% if (i === 1) { %> Need a job or career advice? <% } else if (i
              === 2) { %> Join our fast-growing community! <% } else if (i ===
              3) { %> Check out our resources <% } %>
            </h2>
          </div>
        </div>
        <% } %>
      </div>
      <!-- Changes slides -->
      <div class="control">
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExample"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExample"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>


    <div class="container" id="content">
      <div id="introduction-section" class="introduction-section">
        <h2>About us</h2>
        <p>Welcome to the CS Student Hub, your go-to destination for academic excellence and personal growth! Here, you'll find a centralized knowledge repository filled with curated resources such as articles, tutorials, and textbooks, all categorized for easy access. Our platform offers interactive learning tools like hands-on challenges and quizzes, fostering active learning and knowledge-sharing. Join our vibrant community forum to connect with peers and mentors, share experiences, and receive support. Plus, access time management and productivity resources to optimize your workload and maximize your learning potential. Let's learn, connect, and thrive together at The Hub!</p>
      </div>

      <!-- Latest Articles Section -->
      <div class="latest-articles-section page-section">
        <div class="latest-section">
          <div class="section-title-banner">
            <h3>Trending articles</h3>
            <% if (latestArticlesGoogle && latestArticlesGoogle.length > 0) { %>
            <div class="card-deck">
              <% latestArticlesGoogle.forEach(article => { %>
              <div class="card bg-white p3">
                <div class="card-body text-center">
                  <h5 class="card-title"><%= article.title %></h5>
                  <% if (article.imageUrl) { %>
                  <img
                    src="<%= article.imageUrl %>"
                    class="card-img-top"
                    alt="Article Image"
                  />
                  <% } %>
                  <a href="<%= article.link %>" class="btn read-more" id="rm-button"
                    >Read More</a
                  >
                </div>
              </div>
              <% }) %>
            </div>
            <% } else { %>
            <p>No articles found.</p>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Best Study Tools Section -->
      <div class="best-study-tools-section">
        <div class="latest-section">
          <div class="section-title-banner">
            <h3>Best Study Tools (Based on Leading Research)</h3>
            <div class="card-deck" id="tools">
              <!-- Card 1 - Key cards "Quick test" -->
              <div class="card">
                <img
                  src="/assets/img/keycards.jpg"
                  class="card-img-top"
                  alt="Quick Test"
                />
                <div class="card-body text-center">
                  <h5 class="card-title">Key cards "Quick test"</h5>
                  <a href="/tools">
                    <button class="btn read-more">GO</button>
                  </a>
                </div>
              </div>

              <!-- Card 2 - Pomodoro timer -->
              <div class="card">
                <img
                  src="/assets/img/Pomodoro.jpg"
                  class="card-img-top"
                  alt="Pomodoro Timer"
                />
                <div class="card-body text-center">
                  <h5 class="card-title">Pomodoro Timer</h5>
                  <a href="/tools">
                    <button class="btn read-more">Go</button>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Card 3 - Coding challenges -->
          <div class="card">
            <img
              src="/assets/img/codingchallenge.jpg"
              class="card-img-top"
              alt="Coding Challenges"
            />
            <div class="card-body text-center">
              <h5 class="card-title">Coding Challenges</h5>
              <a href="/tools">
                <button class="btn read-more">GO</button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Go to top button -->
    <button id="goToTopBtn"><i class="fa-solid fa-arrow-up"></i></button>

    <!-- Footer-->
    <footer class="border-top">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <ul class="list-inline text-center">
              <li class="list-inline-item">
                <a href="https://www.twitter.com">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="https://www.facebook.com">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="https://www.github.com">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
            </ul>
            <div class="small text-center text-muted fst-italic">
              Copyright &copy; CS Students Hub
            </div>
          </div>
        </div>
      </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Include the author-home.js file -->
    <script src="/js/author-home.js"></script>
    <script src="/js/homepage.js"></script>
    <script src="/js/scripts.js"></script>
  </body>
</html>
